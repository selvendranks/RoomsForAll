                    </div>
                    <div>
                    <label class="form-label d-inline-block">longitute:</label>
                    <input type="text" name="Room[longitude]" id="longitude"  value="0" >
                    </div>
                    <div>
                    <label class="form-label">latitude :</label>
                    <input type="text" name="Room[latitude]" id="latitude" value="0" >
                </div> 

                <div class="mb-1 input-group-sm">
                    <label class="form-label">Price/day</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">&#8377</span>
                        <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)"
                            name="Room[price]" min="0" required >
                        <div class="invalid-feedback">
                            is not valid
                        </div>
                    </div>
                </div>

                <div class="mb-2 input-group-sm">
                    <label class="form-label">Description</label>
                    <textarea type="text" class="form-control" name="Room[description]" required></textarea>
                    <div class="invalid-feedback">
                        Required
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFileSm" class="form-label">Upload images</label>
                    <input class="form-control form-control-sm" id="formFileSm" type="file" name="image" multiple>
                </div>
                <button type="submit" class="btn btn-success mb-2">Submit</button>
            </form>
    
        </div>
    </div>



