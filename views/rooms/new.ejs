<%layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-md-6 offset-md-3" >
            <p class="h1">New Room</p>
            <form action="/room" method="POST" novalidate class="validated" enctype="multipart/form-data">
                <div class="mb-1 input-group-sm">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-control" name="Room[title]" required>
                    <div class="invalid-feedback">
                        Required
                    </div>
                </div>
                <div class="mb-1 input-group-sm">
                    <label class="form-label">Location</label>
                    <input type="text" class="form-control" name="Room[location]" required>
                    <div class="invalid-feedback">
                        Required
                    </div>
                </div>

                <div>
                <div id="map" style='width: 400px; height: 300px;'></div>
                <pre id="coordinates" class="coordinates"></pre>
                </div>

